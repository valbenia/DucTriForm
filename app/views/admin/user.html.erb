<div class="container">
  <% if @user.length != 0 %>
  <% id = 1 %>
  <h1 style="text-align: center">List form</h1>
  <div class="form-center">
    <table>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
      </tr>

      <% @user.each do |form| %>
      <tr>
        <td><%= id %></td>
        <td><%= form.name %></td>
        <td><%= form.email %></td>
        <td><%= form.phone_number%></td>
        <td><%= link_to 'Edit', '#'%></td>
        <td><%= link_to 'Delete', '#',
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% id +=1 %>
      <% end %>
    </table>
    <% end %>
  </div>
</div>