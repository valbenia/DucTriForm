<h1>Edit form</h1>
<%= form_with(model: @form,local: true) do |form| %>
    <div class="container">
        <div class="row">
            <div>
                <p>
                    <%= form.label :Company %><br>
                    <%= form.text_field :company %>
                </p>
                <p>
                    <%= form.label :Date %><br>
                    <%= form.date_field :date %>
                </p>
                <p>
                    <%= form.label :Content %><br>
                    <%= form.text_field :content %>
                </p>
                <p>
                    <%= form.label :Note %><br>
                    <%= form.text_field :note %>
                </p>
                <p>
                    <%= form.submit "Submit"%>
                </p>
            </div>
        </div>
    </div>
<% end %>
<%= link_to 'Back', formal_index_path %>